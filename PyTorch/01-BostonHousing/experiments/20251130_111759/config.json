{
  "project": {
    "name": "boston_housing",
    "version": "2.0.0",
    "description": "Boston住宅価格予測プロジェクト"
  },
  "data": {
    "raw_data_path": "data/raw/housing.data",
    "processed_data_path": "data/processed/preprocessed.npz",
    "train_ratio": 0.7,
    "val_ratio": 0.15,
    "test_ratio": 0.15,
    "preprocessing": {
      "scaler_type": "standard",
      "handle_outliers": false,
      "outlier_threshold": 3.0
    }
  },
  "model": {
    "type": "simple_nn",
    "input_dim": 13,
    "output_dim": 1,
    "simple_nn": {
      "hidden_size": 100,
      "dropout_rate": 0.2,
      "use_batch_norm": false
    },
    "deep_nn": {
      "hidden_sizes": [
        128,
        64,
        32
      ],
      "dropout_rate": 0.3,
      "use_batch_norm": true,
      "activation": "relu"
    },
    "residual_nn": {
      "hidden_sizes": [
        128,
        128,
        64
      ],
      "dropout_rate": 0.2,
      "use_batch_norm": true
    }
  },
  "training": {
    "batch_size": 32,
    "epochs": 1000,
    "learning_rate": 0.001,
    "optimizer": {
      "type": "adam",
      "weight_decay": 0.0001,
      "sgd": {
        "momentum": 0.9,
        "nesterov": true
      }
    },
    "loss": {
      "type": "mse",
      "loss_scale": 0.001
    },
    "lr_scheduler": {
      "enabled": true,
      "type": "reduce_on_plateau",
      "reduce_on_plateau": {
        "mode": "min",
        "factor": 0.5,
        "patience": 20,
        "min_lr": 1e-05
      },
      "step": {
        "step_size": 100,
        "gamma": 0.5
      }
    },
    "early_stopping": {
      "enabled": true,
      "patience": 50,
      "min_delta": 0.0001,
      "monitor": "val_loss"
    },
    "checkpoint": {
      "save_best_only": true,
      "save_last": true,
      "monitor": "val_loss",
      "mode": "min"
    }
  },
  "evaluation": {
    "metrics": [
      "mse",
      "rmse",
      "mae",
      "r2",
      "mape"
    ],
    "batch_size": 64
  },
  "visualization": {
    "style": "seaborn",
    "figure_size": [
      10,
      6
    ],
    "dpi": 100,
    "save_formats": [
      "png",
      "pdf"
    ],
    "learning_curves": {
      "show_train": true,
      "show_val": true,
      "smoothing": 0.0
    },
    "prediction_plots": {
      "show_confidence_interval": true,
      "confidence_level": 0.95
    }
  },
  "experiment": {
    "base_dir": "experiments",
    "id_format": "%Y%m%d_%H%M%S",
    "save_config": true,
    "save_training_history": true,
    "save_plots": true,
    "save_report": true
  },
  "system": {
    "seed": 42,
    "device": "auto",
    "num_workers": 0,
    "logging": {
      "level": "INFO",
      "console_output": true,
      "file_output": true
    }
  }
}